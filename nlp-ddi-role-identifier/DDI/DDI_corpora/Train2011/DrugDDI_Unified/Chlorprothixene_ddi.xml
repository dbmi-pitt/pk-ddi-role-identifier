<document id="DrugDDI.d330" origId="Chlorprothixene"><sentence id="DrugDDI.d330.s0" origId="s0" text="Chlorprothixene may increase the plasma-level of concomitantly given lithium."><entity id="DrugDDI.d330.s0.e0" origId="s0.p0" charOffset="0-15" type="drug" text="Chlorprothixene"/><entity id="DrugDDI.d330.s0.e1" origId="s0.p4" charOffset="69-76" type="drug" text="lithium"/><pair id="DrugDDI.d330.s0.p0" e1="DrugDDI.d330.s0.e0" e2="DrugDDI.d330.s0.e1" interaction="true"/></sentence><sentence id="DrugDDI.d330.s1" origId="s1" text="In order to avoid lithium intoxication, lithium plasma levels should be monitored closely."/><sentence id="DrugDDI.d330.s2" origId="s2" text="If chlorprothixene is given concomitantly with opioids, the opioid dose should be reduced (by approx. 50%), because chlorprothixene amplifies the therapeutic actions and side-effects of opioids massively."><entity id="DrugDDI.d330.s2.e0" origId="s2.p13" charOffset="3-18" type="drug" text="chlorprothixene"/><entity id="DrugDDI.d330.s2.e1" origId="s2.p17" charOffset="47-54" type="drug" text="opioids"/><entity id="DrugDDI.d330.s2.e2" origId="s2.p18" charOffset="60-66" type="drug" text="opioid"/><entity id="DrugDDI.d330.s2.e3" origId="s2.p28" charOffset="116-131" type="drug" text="chlorprothixene"/><entity id="DrugDDI.d330.s2.e4" origId="s2.p33" charOffset="186-193" type="drug" text="opioids"/><pair id="DrugDDI.d330.s2.p0" e1="DrugDDI.d330.s2.e0" e2="DrugDDI.d330.s2.e1" interaction="true"/><pair id="DrugDDI.d330.s2.p1" e1="DrugDDI.d330.s2.e0" e2="DrugDDI.d330.s2.e2" interaction="false"/><pair id="DrugDDI.d330.s2.p2" e1="DrugDDI.d330.s2.e0" e2="DrugDDI.d330.s2.e3" interaction="false"/><pair id="DrugDDI.d330.s2.p3" e1="DrugDDI.d330.s2.e0" e2="DrugDDI.d330.s2.e4" interaction="false"/><pair id="DrugDDI.d330.s2.p4" e1="DrugDDI.d330.s2.e1" e2="DrugDDI.d330.s2.e2" interaction="false"/><pair id="DrugDDI.d330.s2.p5" e1="DrugDDI.d330.s2.e1" e2="DrugDDI.d330.s2.e3" interaction="false"/><pair id="DrugDDI.d330.s2.p6" e1="DrugDDI.d330.s2.e1" e2="DrugDDI.d330.s2.e4" interaction="false"/><pair id="DrugDDI.d330.s2.p7" e1="DrugDDI.d330.s2.e2" e2="DrugDDI.d330.s2.e3" interaction="false"/><pair id="DrugDDI.d330.s2.p8" e1="DrugDDI.d330.s2.e2" e2="DrugDDI.d330.s2.e4" interaction="false"/><pair id="DrugDDI.d330.s2.p9" e1="DrugDDI.d330.s2.e3" e2="DrugDDI.d330.s2.e4" interaction="false"/></sentence><sentence id="DrugDDI.d330.s3" origId="s3" text="Avoid the concomitant use of chlorprothixene and tramadol (Ultram)."><entity id="DrugDDI.d330.s3.e0" origId="s3.p36" charOffset="29-44" type="drug" text="chlorprothixene"/><entity id="DrugDDI.d330.s3.e1" origId="s3.p38" charOffset="49-57" type="drug" text="tramadol"/><entity id="DrugDDI.d330.s3.e2" origId="s3.p40" charOffset="59-65" type="drug" text="Ultram"/><pair id="DrugDDI.d330.s3.p0" e1="DrugDDI.d330.s3.e0" e2="DrugDDI.d330.s3.e1" interaction="true"/><pair id="DrugDDI.d330.s3.p1" e1="DrugDDI.d330.s3.e0" e2="DrugDDI.d330.s3.e2" interaction="false"/><pair id="DrugDDI.d330.s3.p2" e1="DrugDDI.d330.s3.e1" e2="DrugDDI.d330.s3.e2" interaction="false"/></sentence><sentence id="DrugDDI.d330.s4" origId="s4" text="Massive seizures may be encountered with this combination."/><sentence id="DrugDDI.d330.s5" origId="s5" text="Consider additive sedative effects and confusional states to emerge, if chlorprothixene is given with benzodiazepines or barbituates."><entity id="DrugDDI.d330.s5.e0" origId="s5.p48" charOffset="18-26" type="drug" text="sedative"/><entity id="DrugDDI.d330.s5.e1" origId="s5.p54" charOffset="72-87" type="drug" text="chlorprothixene"/><entity id="DrugDDI.d330.s5.e2" origId="s5.p57" charOffset="102-117" type="drug" text="benzodiazepines"/><pair id="DrugDDI.d330.s5.p0" e1="DrugDDI.d330.s5.e0" e2="DrugDDI.d330.s5.e1" interaction="false"/><pair id="DrugDDI.d330.s5.p1" e1="DrugDDI.d330.s5.e0" e2="DrugDDI.d330.s5.e2" interaction="false"/><pair id="DrugDDI.d330.s5.p2" e1="DrugDDI.d330.s5.e1" e2="DrugDDI.d330.s5.e2" interaction="true"/></sentence><sentence id="DrugDDI.d330.s6" origId="s6" text="Choose particular low doses of these drugs."><entity id="DrugDDI.d330.s6.e0" origId="s6.p62" charOffset="37-42" type="drug" text="drugs"/></sentence><sentence id="DrugDDI.d330.s7" origId="s7" text="Exert particular caution in combining chlorprothixene with other anticholinergic drugs (tricyclic antidepressants and antiparkinsonian agents): Particularly the elderly may develop delirium, high fever, severe obstipation, even ileus and glaucoma."><entity id="DrugDDI.d330.s7.e0" origId="s7.p65" charOffset="38-53" type="drug" text="chlorprothixene"/><entity id="DrugDDI.d330.s7.e1" origId="s7.p66" charOffset="65-86" type="drug" text="anticholinergic drugs"/><entity id="DrugDDI.d330.s7.e2" origId="s7.p68" charOffset="88-113" type="drug" text="tricyclic antidepressants"/><entity id="DrugDDI.d330.s7.e3" origId="s7.p70" charOffset="118-141" type="drug" text="antiparkinsonian agents"/><pair id="DrugDDI.d330.s7.p0" e1="DrugDDI.d330.s7.e0" e2="DrugDDI.d330.s7.e1" interaction="true"/><pair id="DrugDDI.d330.s7.p1" e1="DrugDDI.d330.s7.e0" e2="DrugDDI.d330.s7.e2" interaction="false"/><pair id="DrugDDI.d330.s7.p2" e1="DrugDDI.d330.s7.e0" e2="DrugDDI.d330.s7.e3" interaction="true"/><pair id="DrugDDI.d330.s7.p3" e1="DrugDDI.d330.s7.e1" e2="DrugDDI.d330.s7.e2" interaction="false"/><pair id="DrugDDI.d330.s7.p4" e1="DrugDDI.d330.s7.e1" e2="DrugDDI.d330.s7.e3" interaction="false"/><pair id="DrugDDI.d330.s7.p5" e1="DrugDDI.d330.s7.e2" e2="DrugDDI.d330.s7.e3" interaction="false"/></sentence></document>